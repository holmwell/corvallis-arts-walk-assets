extends layout

block content
  .container(ng-controller='EditCtrl')
    h1= title
    //-    p Welcome to #{title}

    div(ng-repeat="dest in destinations")
      .col-md-4.col-xs-12.col-sm-6.cover(ng-class='{ isActive: dest.isActive }')
        a(href="/dest/{{dest.id}}")
          h3 {{dest.name}}

    .row
      &nbsp;

    .row
      .col-md-7
        input.form-control(type="text" ng-model="assetsUrl")
    .row
      .col-md-12
        button.btn.btn-default(ng-click="save()") Save
